{
  "name": "keepobot-ts",
  "version": "0.0.2",
  "author": "rflorian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rflorian/keepobot-ts"
  },
  "description": "Typescript port of https://github.com/rflorian/keepobot, an IRC bot to interact with twitch chat",
  "scripts": {
    "build": "tsc --p tsconfig.json",
    "release": "standard-version",
    "start": "ts-node src/start.ts",
    "test": "jest",
    "lint": "tslint ./src/**"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)test)\\.tsx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/api/**",
      "!**/index.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/pino": "^5.6.0",
    "jest": "^23.6.0",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.5"
  },
  "dependencies": {
    "pino": "^5.8.0",
    "pino-pretty": "^2.2.3",
    "request": "^2.88.0",
    "rxjs": "^6.3.3",
    "stream-json": "^1.1.3",
    "twitch-js": "^1.2.15"
  }
}
