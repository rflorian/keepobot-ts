{
  "name": "keepobot-ts",
  "version": "0.0.2",
  "author": "rflorian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rflorian/keepobot-ts"
  },
  "description": "Typescript port of https://github.com/rflorian/keepobot, an IRC bot to interact with twitch chat",
  "scripts": {
    "build": "tsc",
    "release": "standard-version",
    "start": "ts-node src/start.ts",
    "test": "jest",
    "lint": "tslint ./src/**"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)test)\\.tsx?$",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.index.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/pino": "^4.16.1",
    "jest": "^22.4.4",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^6.0.3",
    "tslint": "^5.11.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "pino": "^4.17.6",
    "pino-pretty": "^1.0.1",
    "request": "^2.88.0",
    "rxjs": "^6.3.2",
    "stream-json": "^0.6.1",
    "twitch-js": "^1.2.14"
  }
}
